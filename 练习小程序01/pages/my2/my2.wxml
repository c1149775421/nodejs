<!--pages/my2/my2.wxml-->
<input type="text" placeholder="请输入本机IP地址" bindchange="ip"/>
<view class="content">
    <form bindsubmit="submit">
        <view>
            <text>姓名：</text>
            <input name="name" value="张三"></input>
        </view>

        <view>
            <text>性别：</text>
            <radio-group name="gender">
                <label>
                    <radio value="0" checked>男</radio>
                </label>
                <label>
                    <radio value="1">女</radio>
                </label>
            </radio-group>
        </view>

        <view>
            <text>专业技能：</text>
            <checkbox-group name="skills">
                <label><checkbox value="HTML" checked>HTML</checkbox></label>
                <label><checkbox value="CSS" checked>CSS</checkbox></label>
                <label><checkbox value="JavaScript">JavaScript</checkbox></label>
                <label><checkbox value="Photoshop">Photoshop</checkbox></label>
            </checkbox-group>
        </view>

        <view>
            <text>您的意见：</text>
            <textarea name="opinion" value="test"></textarea>
        </view>
        <button form-type="submit" type="primary">提交</button>
    </form>
    <view wx:for="{{bbs}}">{{item}}</view>
</view>
